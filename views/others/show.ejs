<% layout('layout/boilerplate') %>
<div class="row mt-3">
  <div class="col-md-8 offset-3">
    <div class="card shadow-sm p-3 mb-5 bg-white rounded">
      <div class="card-body">
        <h3 class="title">For <%= vitamin.name %></h3>
        <h5 class="card-title"><%= others.name %></h5>
        <p class="card-text"><%= others.description %></p>

        <a href="/vitamins/<%= vitamin.id %>" class="btn btn-dark"> < Back</a>

        <form
          action="/vitamins/<%= vitamin.id %>/others/<%=others.id %>?_method=DELETE"
          method="POST"
          class="d-inline"
        >
          <button class="btn btn-sm btn-danger">delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
