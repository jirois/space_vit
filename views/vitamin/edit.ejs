<% layout('layout/boilerplate') %>
<form
  action="/vitamins/<%= vitamin.id %>?_method=PUT"
  method="POST"
  class="mt-5"
>
  <div class="mb-3 col-9 px-5">
    <label for="name" class="form-label">Name</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      value="<%= vitamin.name %>"
    />
  </div>
  <div class="mb-3 col-9 px-5">
    <label for="dosage" class="form-label">Dosage</label>
    <input
      type="text"
      class="form-control"
      id="dosage"
      name="dosage"
      value="<%= vitamin.dosage %>"
    />
  </div>
  <div class="mb-3 col-9 px-5">
    <label for="company" class="form-label">Company</label>
    <input
      type="text"
      class="form-control"
      id="company"
      name="company"
      value="<%= vitamin.company %>"
    />
  </div>
  <div class="col-12 px-5">
    <button type="submit" class="btn btn-primary">Save Changes</button>
  </div>
</form>
