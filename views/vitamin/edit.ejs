<% layout('layout/boilerplate') %>
<form
  action="/vitamins/<%= vitamin.id %>?_method=PUT"
  method="POST"
  class="mt-5 form-validation"
  novalidate
>
  <div class="mb-3 col-9 px-5">
    <label for="name" class="form-label">Name</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      value="<%= vitamin.name %>"
      required
    />
  </div>
  <div class="mb-3 col-9 px-5">
    <label for="dosage" class="form-label">Dosage</label>
    <select
      class="form-select form-select-sm mb-3"
      aria-label=".form-select-sm"
      name="dosage"
    >
      <% for (let dosage of dosageForm) { %>
      <option value="<%= dosage %>" <%= vitamin.dosage === dosage ? 'selected' : '' %>><%= dosage %></option>
      <% } %>
    </select>
  </div>
  <div class="mb-3 col-9 px-5">
    <label for="company" class="form-label">Company</label>
    <input
      type="text"
      class="form-control"
      id="company"
      name="company"
      value="<%= vitamin.company %>"
      required
    />
  </div>
  <div class="col-12 px-5">
    <button type="submit" class="btn btn-primary">Save Changes</button>
  </div>
</form>
